const recipe = `<h1>Grilled Chicken Avocado Sandwich</h1>

<p><strong>Ingredients:</strong></p>
<ul>
  <li>2 slices of whole grain bread</li>
  <li>1 grilled chicken breast, sliced</li>
  <li>1/2 avocado, sliced</li>
  <li>Leafy romaine lettuce</li>
  <li>Tomato slices</li>
  <li>Swiss cheese, 1-2 slices</li>
  <li>Mayonnaise</li>
  <li>Olive oil (for grilling)</li>
</ul>

<p><strong>Instructions:</strong></p>
<ol>
  <li>Heat a skillet over medium heat and lightly oil it.</li>
  <li>Grill the chicken breast until cooked through, then slice it thinly.</li>
  <li>Toast the bread slices lightly in the skillet.</li>
  <li>Spread mayonnaise on one side of each bread slice.</li>
  <li>Layer the chicken, avocado, lettuce, tomato, and Swiss cheese on one slice of bread.</li>
  <li>Top with the other slice of bread, mayo side down.</li>
  <li>Grill the sandwich in the skillet for about 2-3 minutes on each side, until golden brown and the cheese is melted.</li>
  <li>Cut in half and serve warm!</li>
</ol>
`;
console.log(recipe);
---

<div id="container">
  <img id="background" src={background.src} alt="" fetchpriority="high" />
  <main>
    <section id="hero">
      <div class="message-container">
        <h1>What sandwich should I make?</h1>
        <div class="send-button-container">
          <button id="btn-send"> Send </button>
        </div>
      </div>
      <!-- <div class="logo-container">ChatBLT</div> -->
    </section>
	<section id="recipe" style="display: none;">
		<div class="recipe">
			{recipe}
		</div>
		<!-- <div class="logo-container">ChatBLT</div> -->
	</section>
  </main>
</div>

<script type="module">
	document.getElementById("btn-send").addEventListener("click", () => {
		const recipeSection = document.getElementById("recipe");
		const messageSection = document.getElementById("hero");

		const recipeContent = document.querySelector('.recipe');
		recipeContent.innerHTML = recipeContent.innerText; // Set the raw HTML content

		recipeSection.style.display = "block";
		messageSection.style.display = "none";
	});
</script>

<style>
  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(100px);
  }

  .message-container {
    background: rgba(255, 255, 255, 0.4);
    padding: 1em 1.5em;
    border-radius: 2em;
    display: flex;
    margin-top: 5vh;
    /* margin-bottom: 35vh; */
  }

  .send-button-container {
    display: flex;
    justify-content: flex-end;
    /* margin-top: 1em; */
    margin-left: 2em;
  }

  .logo-container {
    display: grid;
    place-items: center;
    color: rgba(0, 0, 0, 0.3);
    width: 100%;
  }

  .recipe {
	padding: 5em 2em 2em;
	min-height: 80vh;
  }

  #btn-send {
    background: #007aff;
    color: white;
    padding: 0.5em 1em;
    border-radius: 1em;
    border: none;
    font-size: 1.2em;
    cursor: pointer;
  }

  #container {
    font-family: Inter, Roboto, "Helvetica Neue", "Arial Nova", "Nimbus Sans",
      Arial, sans-serif;
	height: 90vh;
  }

  main {
    height: 100%;
    display: flex;
    justify-content: center;
  }

  #hero {
    display: flex;
    align-items: start;
    flex-direction: column;
    justify-content: center;
    padding: 16px;
  }

  h1 {
    font-size: 22px;
    margin-top: 0.25em;
    margin: 0 0.1em;
    align-content: center;
  }

  #links {
    display: flex;
    gap: 16px;
  }

  #links a {
    display: flex;
    align-items: center;
    padding: 10px 12px;
    color: #111827;
    text-decoration: none;
    transition: color 0.2s;
  }

  #links a:hover {
    color: rgb(78, 80, 86);
  }

  #links a svg {
    height: 1em;
    margin-left: 8px;
  }

  #links a.button {
    color: white;
    background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
    box-shadow:
      inset 0 0 0 1px rgba(255, 255, 255, 0.12),
      inset 0 -2px 0 rgba(0, 0, 0, 0.24);
    border-radius: 10px;
  }

  #links a.button:hover {
    color: rgb(230, 230, 230);
    box-shadow: none;
  }

  pre {
    font-family: ui-monospace, "Cascadia Code", "Source Code Pro", Menlo,
      Consolas, "DejaVu Sans Mono", monospace;
    font-weight: normal;
    background: linear-gradient(14deg, #d83333 0%, #f041ff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin: 0;
  }

  h2 {
    margin: 0 0 1em;
    font-weight: normal;
    color: #111827;
    font-size: 20px;
  }

  p {
    color: #4b5563;
    font-size: 16px;
    line-height: 24px;
    letter-spacing: -0.006em;
    margin: 0;
  }

  code {
    display: inline-block;
    background:
      linear-gradient(66.77deg, #f3cddd 0%, #f5cee7 100%) padding-box,
      linear-gradient(155deg, #d83333 0%, #f041ff 18%, #f5cee7 45%) border-box;
    border-radius: 8px;
    border: 1px solid transparent;
    padding: 6px 8px;
  }

  .box {
    padding: 16px;
    background: rgba(255, 255, 255, 1);
    border-radius: 16px;
    border: 1px solid white;
  }

  #news {
    position: absolute;
    bottom: 16px;
    right: 16px;
    max-width: 300px;
    text-decoration: none;
    transition: background 0.2s;
    backdrop-filter: blur(50px);
  }

  #news:hover {
    background: rgba(255, 255, 255, 0.55);
  }

  @media screen and (max-height: 368px) {
    #news {
      display: none;
    }
  }

  @media screen and (max-width: 768px) {
    #container {
      display: flex;
      flex-direction: column;
    }

    /* #hero {
      display: block;
      padding-top: 10%;
    } */

    #links {
      flex-wrap: wrap;
    }

    #links a.button {
      padding: 14px 18px;
    }

    #news {
      right: 16px;
      left: 16px;
      bottom: 2.5rem;
      max-width: 100%;
    }

    h1 {
      line-height: 1.5;
    }
	.recipe {
		padding-top: 1em;
	}
	.message-container {
		font-size: 1em !important;
		padding: 0.75em 1em;
	}
	#btn-send {
		margin-left: 0.5em;
	}
	button, h1 {
		font-size: 1em !important;
	}
  }
</style>
